    "dotenv": "^10.0.0",
    "eslint": "7.27.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^1.0.0",
    "svelte": "^3.0.0",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2",
    "uvu": "^0.5.1"
  },
  "lint-staged": {
    "./src/**/*.{svelte,ts}": [
      "eslint --fix"
    ],
    "./*.{js,ts,cjs}": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
