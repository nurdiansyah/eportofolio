{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "ES2020",
    "lib": ["es2020"],
    "target": "ES2019",
    "importsNotUsedAsValues": "error",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
